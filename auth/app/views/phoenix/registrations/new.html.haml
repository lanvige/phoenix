.span-12.prepend-6.last
  .floating
    %h3 sign_up
    = simple_form_for( resource, :as => resource_name, :url => registration_path(resource_name) ) do |f|
      = devise_error_messages!
      %p
        = f.input :name
      %p
        = f.input :email
      %p
        = f.input :password
      %p
        = f.input :password_confirmation
      %p
      = f.button :submit
    %br
    %br